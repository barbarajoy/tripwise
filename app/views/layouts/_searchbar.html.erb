<div class="searchbar-container">
  <div class="col-sm-8 my-3">
    <%= form_with url: trips_path, method: :get, class: "d-flex align-items-center" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "searchbar form-control rounded-pill mr-2 p-2",
        placeholder: "Where do you want to travel"
      %>
    <%= submit_tag "Search", name: "", class: "button-dark-green rounded-pill" %>
    <% end %>
  </div>
</div>
